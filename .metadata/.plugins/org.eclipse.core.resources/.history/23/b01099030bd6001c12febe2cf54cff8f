package antiguo;

public class Ejercicio10String {

	public static void main(String[] args) {
		
		/*
		 * Ejercicio: escribe un programa que devuelva si un String es palindromo (se
		 * escribe igual hacia delante y hacia detras). Ejemplo: "sometemos".
		 */
		
		
		String str = "sometemos";
		String palabraRevertida = "";
		
		for(int i=str.length()-1; i>=0; i--) {
			palabraRevertida += str.charAt(i);
		}
		
		if(str.equals(palabraRevertida)) {
			System.out.println("Es palindromo");
		} else {
			System.out.println("NO es palindromo");
		}
		
		
		
	}

}
