package antiguo;

import javax.security.auth.callback.TextOutputCallback;

public class Main4String {

	public static void main(String[] args) {

		String texto = "Esto es un string";
		
		// longitud de un string
		System.out.println(texto.length());
		
		// mostrar el elemento de la posicion 5
		System.out.println(texto.charAt(5));
				
		// buscar un string dentro de otro string
		int posicion = texto.indexOf("es");
		System.out.println(posicion);
		
		// comparar dos strings
		String str1 = "hola";
		String str2 = "hola";
		
		// str1 === str2
		if(str1.equals(str2)) {
		System.out.println("Son iguales");
			//equals devuelve booleano
		}
		
		// iterar un string
		for(int i=0; i<texto.length(); i++) {
			System.out.println(texto.charAt(i));
		}
		
		String texto1 = "sometemos";
		String texto2 = "sometemos";
		
		if(texto1.equals(texto2)) {
			System.out.println(texto1.charAt(5));
		}
		
	}

}
