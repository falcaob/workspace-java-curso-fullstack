
public class Main {

	public static void main(String[] args) {

		System.out.println("Hola Mundo");
		System.out.println(5 + 2);
		System.out.println(5 - 2);
		System.out.println(5 * 2);
		System.out.println(5 / 2);
		System.out.println(5 % 2);
		System.out.println(Math.pow(5, 2));

		// exercise 2 and 3
		System.out.println("2*3");
		System.out.println(2 * 3);

		// Escape sequences
		System.out.println("\t\"Hola\nmundo\"");
		System.out.println("\tHola\nMundo");
		System.out.println(" \" ");
		System.out.println(" \\ ");

		/*
		 * printf el println hace el salto de línea
		 */
		System.out.printf("El producto de 5*2 = %d", 5 * 2).println();
		System.out.printf("La suma de 5 + 6 + 7 = %d", 5 + 6 + 7).println();

		/*
		 * Variables num�ricas
		 */
		// const edad: number = 18;

		// variable de tipo entero
		int edad = 18;
		System.out.println(edad);

		// variable de tipo flotante (con decimales)
		double precioBarraPan = 4.3;
		System.out.println(precioBarraPan);

		/*
		 * Ejercicio: escribe un programa que declare tres variables de nombre a, b y c,
		 * con valores de tipo entero.
		 */

		System.out.println("Ejercicio");
		int a = 3, b = 4, c = 6;
		System.out.println(a);
		System.out.println(b);
		System.out.println(c);
		System.out.printf("La suma de a + b + c = %d", a + b + c).println();

	}

}
