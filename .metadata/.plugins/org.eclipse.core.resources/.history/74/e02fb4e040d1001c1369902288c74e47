
public class Ejercicio3 {

	public static void main(String[] args) {


		/*
		 * Muestra los numeros del 320 al 160, contando de 20 en 20 hacia atras
		 * utilizando un bucle while
		 */

			int numeros = 320;
			int restar = numeros - 20;
			System.out.println(numeros);
			
			while(numeros <= 160) {
				int restar = numeros - 20;
				System.out.println(numeros);
				break;
			}
	}

}
